@model IEnumerable<CoinTracker.Models.tblCoin>

@{
    ViewBag.Title = "Index";
}

<h2>Current Coins in Collection</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="row">
    @foreach (var item in Model)
    {

        <div class="col-sm-4">
            <div class="card Coin_Card">
                <img class="card-img-top" id="img_Card" src="~/images/@item.Image_Path" alt="Coin Image">
                <div class="card-body">
                    <h4 class="card-title">@item.Coin_Name</h4>
                    <p class="card-text">Purchased for: <u>R @item.Purchase_Amount</u> on <u>@item.Purchase_Date.ToLongDateString()</u></p>
                    <a href="#" class="btn btn-primary">Coin Details</a>
                </div>
            </div>

        </div>
    }
</div>

